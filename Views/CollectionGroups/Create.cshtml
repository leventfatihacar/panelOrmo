@model panelOrmo.Models.CollectionGroupViewModel
@{
    ViewData["Title"] = "Create Collection Group";
    Layout = "_Layout";
    var collections = ViewBag.Collections as List<panelOrmo.Models.Collection>;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Create Collection Group</h2>
    <a href="/CollectionGroups" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form action="/CollectionGroups/Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Group Name *</label>
                        <input name="Name" id="Name" class="form-control" placeholder="Enter group name" />
                    </div>

                    <div class="mb-3">
                        <label for="ParentCollectionID" class="form-label">Parent Collection *</label>
                        <select name="ParentCollectionID" id="ParentCollectionID" class="form-select">
                            <option value="">Select Parent Collection</option>
                            @foreach (var collection in collections)
                            {
                                <option value="@collection.DID">@collection.DName</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="LanguageID" class="form-label">Language *</label>
                        <select name="LanguageID" id="LanguageID" class="form-select">
                            <option value="">Select Language</option>
                            <option value="1">Turkish</option>
                            <option value="2">English</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Image" class="form-label">Group Image</label>
                        <input name="Image" id="Image" type="file" class="form-control" accept="image/jpeg" />
                        <div class="form-text">Only .jpg files are allowed</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input name="IsActive" id="IsActive" class="form-check-input" type="checkbox" value="true" checked />
                            <input type="hidden" name="IsActive" value="false" />
                            <label for="IsActive" class="form-check-label">
                                Active
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Create Group
                </button>
                <a href="/CollectionGroups" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
