@model panelOrmo.Models.CollectionGroupViewModel
@{
    ViewData["Title"] = "Edit Collection Group";
    Layout = "_Layout";
    var collections = ViewBag.Collections as List<panelOrmo.Models.Collection>;
}

<div class="container mt-4">
    <h2>Edit Collection Group</h2>
    <form action="/CollectionGroups/Edit/@ViewContext.RouteData.Values["id"]" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="Name" class="form-label">Group Name *</label>
                    <input name="Name" id="Name" class="form-control" placeholder="Enter group name" value="@Model.Name" />
                </div>

                <div class="mb-3">
                    <label for="ParentCollectionID" class="form-label">Parent Collection *</label>
                    <select name="ParentCollectionID" id="ParentCollectionID" class="form-select">
                        <option value="">Select Parent Collection</option>
                        @foreach (var collection in collections)
                        {
                            <option value="@collection.DID" selected="@(Model.ParentCollectionID == collection.DID)">@collection.DName</option>
                        }
                    </select>
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="LanguageID" class="form-label">Language *</label>
                    <select name="LanguageID" id="LanguageID" class="form-select">
                        <option value="">Select Language</option>
                        <option value="1" selected="@(Model.LanguageID == 1)">Turkish</option>
                        <option value="2" selected="@(Model.LanguageID == 2)">English</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Group Image</label>
                    <input name="Image" id="Image" type="file" class="form-control" accept="image/jpeg" />
                    <div class="form-text">Only .jpg files are allowed. Leave blank to keep current image.</div>
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentImageUrl))
                    {
                        <div class="mt-2">
                            <p>Current Image:</p>
                            <img src="@ViewBag.CurrentImageUrl" style="max-width: 200px;" />
                        </div>
                    }
                </div>

                <div class="form-check mb-3">
                    <input name="IsActive" id="IsActive" class="form-check-input" type="checkbox" value="true" checked="@Model.IsActive" />
                    <label for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/CollectionGroups/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 