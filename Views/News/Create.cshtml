@model panelOrmo.Models.NewsViewModel
@{
    ViewData["Title"] = "Create News Article";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Create News Article</h2>
    <a href="/News" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title *</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter news title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label">Content *</label>
                        <textarea asp-for="Content" class="form-control" rows="10" placeholder="Enter news content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="LanguageID" class="form-label">Language *</label>
                        <select asp-for="LanguageID" class="form-select">
                            <option value="">Select Language</option>
                            <option value="1">Turkish</option>
                            <option value="2">English</option>
                        </select>
                        <span asp-validation-for="LanguageID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Featured Image</label>
                        <input asp-for="Image" type="file" class="form-control" accept="image/jpeg" />
                        <div class="form-text">Only .jpg files are allowed</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PublishDate" class="form-label">Publish Date</label>
                        <input asp-for="PublishDate" type="datetime-local" class="form-control" />
                        <div class="form-text">Leave empty for current date/time</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Active
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create Article
                        </button>
                        <a href="/News" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
