@model panelOrmo.Models.NewsViewModel
@{
    ViewData["Title"] = "Edit News Article";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Edit News Article</h2>
    <form action="/News/Edit/@ViewContext.RouteData.Values["id"]" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Title" class="form-label">Title *</label>
            <input name="Title" id="Title" class="form-control" placeholder="Enter article title" value="@Model.Title" required />
        </div>
        <div class="mb-3">
            <label for="Content" class="form-label">Content *</label>
            <textarea name="Content" id="Content" class="form-control" rows="8" placeholder="Write your article content here..." required>@Model.Content</textarea>
        </div>
        <div class="mb-3">
            <label for="LanguageID" class="form-label">Language *</label>
            <select name="LanguageID" id="LanguageID" class="form-select" required>
                <option value="">Select Language</option>
                <option value="1" selected="@(Model.LanguageID == 1)">Turkish</option>
                <option value="2" selected="@(Model.LanguageID == 2)">English</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="Image" class="form-label">Featured Image</label>
            <input name="Image" id="Image" type="file" class="form-control" accept="image/jpeg" />
            <div class="form-text">Only .jpg files are allowed. Leave blank to keep the current image.</div>
            @if (!string.IsNullOrEmpty(ViewBag.CurrentImageUrl))
            {
                <div class="mt-2">
                    <p>Current Image:</p>
                    <img src="@ViewBag.CurrentImageUrl" style="max-width: 200px;" />
                </div>
            }
        </div>
        <div class="mb-3">
            <label for="PublishDate" class="form-label">Publish Date</label>
            <input name="PublishDate" id="PublishDate" type="date" class="form-control" value="@Model.PublishDate?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-check mb-3">
            <input name="IsActive" id="IsActive" class="form-check-input" type="checkbox" value="true" checked="@Model.IsActive" />
            <label for="IsActive" class="form-check-label">Active</label>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/News/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 