@model panelOrmo.Models.CollectionViewModel
@{
    ViewData["Title"] = "Edit Collection";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Edit Collection</h2>
    <form action="/Collections/Edit/@ViewContext.RouteData.Values["id"]" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="Name" class="form-label">Collection Name *</label>
                    <input name="Name" id="Name" class="form-control" placeholder="Enter collection name" value="@Model.Name" />
                </div>

                <div class="mb-3">
                    <label for="Summary" class="form-label">Summary (Year)</label>
                    <input name="Summary" id="Summary" class="form-control" placeholder="e.g., 2025" value="@Model.Summary" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="mb-3">
                    <label for="LanguageID" class="form-label">Language *</label>
                    <select name="LanguageID" id="LanguageID" class="form-select">
                        <option value="">Select Language</option>
                        <option value="1" selected="@(Model.LanguageID == 1)">Turkish</option>
                        <option value="2" selected="@(Model.LanguageID == 2)">English</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Image" class="form-label">Collection Image</label>
                    <input name="Image" id="Image" type="file" class="form-control" accept="image/jpeg" />
                    <div class="form-text">Only .jpg files are allowed. Leave blank to keep current image.</div>
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentImageUrl))
                    {
                        <div class="mt-2">
                            <p>Current Image:</p>
                            <img src="@ViewBag.CurrentImageUrl" style="max-width: 200px;" />
                        </div>
                    }
                </div>

                <div class="form-check mb-3">
                    <input name="IsActive" id="IsActive" class="form-check-input" type="checkbox" value="true" checked="@Model.IsActive" />
                    <label for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="/Collections/Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div> 