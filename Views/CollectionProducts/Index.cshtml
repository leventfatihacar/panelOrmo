@model List<panelOrmo.Models.CollectionProduct>
@{
    ViewData["Title"] = "Collection Products Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Collection Products (Koleksiyon Ürünleri)</h2>
    <a href="/CollectionProducts/Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Product
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Code</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.PID</td>
                            <td>@product.PCode</td>
                            <td>@product.PName</td>
                            <td>
                                @if (product.PIsValid)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>@product.PCreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="/CollectionProducts/Edit/@product.PID" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="btn btn-outline-danger" onclick="toggleProductStatus(@product.PID, @product.PIsValid.ToString().ToLower())">
                                        <i class="fas fa-toggle-@(product.PIsValid ? "on" : "off")"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
